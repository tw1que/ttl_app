{
  "name": "ttl_app",
  "private": true,
  "workspaces": ["ttl_web", "ttl_client", "ttl_server", "ttl_db"],
  "packageManager": "npm@10.8.2",
  "scripts": {
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint .",
    "format": "prettier . --write",
    "build": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "npm run -w ttl_server coverage",
    "openapi": "npm run -w ttl_server openapi",
    "ws:install": "npm install --workspaces --include-workspace-root",
    "ws:ci": "npm ci --workspaces --include-workspace-root",
    "web:dev": "npm -w ttl_web run dev",
    "web:build": "npm -w ttl_web run build",
    "web:lint": "npm -w ttl_web run lint"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.30.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
